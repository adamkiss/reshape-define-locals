doctype html
block(name='locals')
html
  head
    meta(charset='utf-8')
    meta(name='description' content='{{ page && ("description" in page) ? page.description : "" }}')
    meta(name='viewport' content='width=device-width, initial-scale=1')

    block(name='title')
      title {{ page.title }}

  body
    block(name='content')
